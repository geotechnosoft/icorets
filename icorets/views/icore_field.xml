    <!--    Product template hide standard price-->
    <record id="product_template_only_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.only.form.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <!--            <xpath expr="//div[@name='button_box']" position="replace">-->
            <div name="button_box" position="inside">
                <button name="162" type="action" icon="fa-sitemap" class="oe_stat_button"  groups="product.group_product_variant">
                    <field string="Variants" name="product_variant_count" widget="statinfo"/>
                </button>
            </div>
            <!--            </xpath>-->


            <!--            <xpath expr="//label[@for='standard_price']" position="replace">-->
            <!--            </xpath>-->

            <!--             <xpath expr="//div[@name='standard_price_uom']" position="replace">-->

            <!--            </xpath>-->


            <xpath expr="//notebook/page[@name='general_information']" position="after">
                <page string="Extra Information">
                    <group string="Other Details">
                        <group>
                            <field name="occasion"/>
                            <field name="material"/>
                            <field name="style_code"/>
                            <field name="brand_id"/>
                            <field name="buin"/>
                            <field name="parent_buin"/>
                        </group>
                        <group>
                            <field name="user_defined_miscallaneous1"/>
                            <field name="user_defined_miscallaneous2"/>
                            <field name="user_defined_miscallaneous3"/>
                            <field name="user_defined_miscallaneous4"/>
                            <field name="user_defined_miscallaneous5"/>
                        </group>

                    </group>
                    <group string="Technical Specifications">
                        <field name="manufactured_by"/>
                        <field name="marketed_by"/>
                        <field name="length"/>
                        <field name="width"/>
                        <field name="height"/>
                        <field name="weight"/>
                        <field name="cntry_of_origin"/>
                        <field name="manufactured_by"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!--    Product Variant Form-->
    <record id="view_icore_variant_form" model="ir.ui.view">
        <field name="name">view.icore.variant</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook/page[@name='general_information']" position="after">
                <page string="Product Information">
                    <group string="Details">
                        <group>
                            <field name="brand_id_rel"/>
                            <field name="variant_asin"/>
                            <field name="variant_fsn"/>
                            <field name="variant_article_code"/>
                        </group>
                        <group>
                            <field name="variant_cost"/>
                            <field name="variant_packaging_cost"/>
                        </group>

                    </group>

                </page>
            </xpath>
        </field>
    </record>


    <!--    Product Variant Tree-->

    <record id="view_icore_variant_tree" model="ir.ui.view">
        <field name="name">view.icore.variant.tree</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="brand_id_rel" optional="hide"/>
                <field name="variant_article_code"/>
                <!--                <field name="barcode"/>-->
                <field name="variant_asin"/>
                <field name="variant_fsn"/>
            </xpath>
        </field>
    </record>

    <!--    Sample button for import product-->
    <record model="ir.ui.view" id="view_import_attributes_form">
        <field name="name">Import Attributes</field>
        <field name="model">import.attributes</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="upload_attributes_file"/>
                    </group>
                    <group>
                    </group>
                </group>
                <footer>
                    <button name="import_product" string="Submit" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_import_attributes_form">
        <field name="name">Import Attributes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">import.attributes</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <menuitem id="menu_attributes_branch" name="Import Attributes"
              action="action_import_attributes_form" parent="stock.menu_stock_inventory_control" sequence="40"/>


    <!--    Product Brand View-->

    <!--    #form view-->
    <record model="ir.ui.view" id="view_brand_form">
        <field name="name">Product Brand</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <form string="Brand">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--    tree view-->
    <record model="ir.ui.view" id="view_brand_tree">
        <field name="name">Product Brand List</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <tree string="Brand" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_brand_form">
        <field name="name">Product Brands</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.brand</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" eval="False"/>
    </record>

    <menuitem id="menu_brand" name="Brands"
              action="action_brand_form" parent="stock.menu_stock_inventory_control" sequence="30"/>

    <!--    Account move line inherit-->

    <record id="inherit_account_move_line" model="ir.ui.view">
        <field name="name">inherit.account.move.form</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="tax_amount_line" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!--    #inheriting SALE ORDER-->
    <record id="inherit_sale_order_form" model="ir.ui.view">
        <field name="name">inherit.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="warehouse_id" readonly="0"/>
                <field name="location_id" attrs="{'readonly': [('state', 'not in', 'draft')]}"/>
                <field name="po_no"/>
                <field name="no_of_cartons"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="before">
                <field name="stock_quantity" readonly="1"/>
            </xpath>
        </field>
    </record>

    <!--    Inheriting account move-->

    <record id="inherit_account_move" model="ir.ui.view">
    <field name="name">inherit.account.move.form</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@id='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='account_id']" position="after">
                <field name="myntra_sku_code" optional="hide"/>
            </xpath>
        </field>
    </record>

<!--    Inheriting purchase Order-->
    <record id="inherit_purchase_order" model="ir.ui.view">
    <field name="name">inherit.purchase.order.form</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="warehouse_id"/>
            </xpath>
        </field>
    </record>

</odoo>