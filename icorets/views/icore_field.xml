<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--    For adding style code on product Kanban view-->

    <record model="ir.ui.view" id="product_kanban_inherited_view">
        <field name="name">product.kanban.inherited</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('mt-1')]" position="replace">
                <div name="product_lst_price" class="mt-1">
                    Style Code:
                    <field name="style_code"/>
                </div>
            </xpath>
        </field>
    </record>

    <!--    For removing attributes in carrier id in stock picking-->

    <record model="ir.ui.view" id="stock_picking_inherited_view">
        <field name="name">stock.picking.inherited</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='carrier_data']/field[@name='carrier_id']" position="replace">
                <field name="carrier_id" options="{'no_create': True, 'no_open': True}"/>
            </xpath>
            <xpath expr="//group[@name='carrier_data']/div[@name='tracking']" position="replace">
                <div name="tracking">
                    <field name="carrier_tracking_ref" class="oe_inline"/>
                    <button type='object' class="fa fa-arrow-right oe_link" confirm="Cancelling a delivery may not be undoable. Are you sure you want to continue?" name="cancel_shipment" string="Cancel" attrs="{'invisible':['|','|','|',('carrier_tracking_ref','=',False),('delivery_type','in', ['fixed', 'base_on_rule']),('delivery_type','=',False),('state','not in',('done'))]}"/>
                </div>
            </xpath>
        </field>
    </record>

<!--    Picking form inherited-->
    <record model="ir.ui.view" id="stock_picking_inherited_view_transfers">
        <field name="name">stock.picking.inherited.transfers</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_cancel']" position="after">
                <button string="Updating Picking List" name="update_picking_list_wizard" type="object" class="btn-primary"/>
            </xpath>
        </field>
    </record>


    <!--    For adding codes in product.product smart button view-->
    <record id="product_variant_form_view_inherit" model="ir.ui.view">
        <field name="name">product.variant.only.form.view.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group/field[@name='barcode']" position="after">
                <field name="variants_asin"/>
                <field name="variants_func_spo"/>
                <field name="variants_gender"/>
                <field name="variants_tech_feat"/>
                <field name="variants_fsn"/>
                <field name="variant_article_code"/>
                <field name="brand_id_rel"/>
            </xpath>

            <xpath expr="//group/group[@name='pricing']" position="inside">
                <field name="variant_packaging_cost"/>
                <field name="variant_total_cost" />
                <field name="color"/>
                <field name="size"/>
                <field name="buin"/>
            </xpath>

        </field>
    </record>


    <!--    Product template-->
    <record id="product_template_only_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.only.form.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <!--            <xpath expr="//div[@name='button_box']" position="replace">-->
            <div name="button_box" position="inside">
                <button name="162" type="action" icon="fa-sitemap" class="oe_stat_button"  groups="product.group_product_variant">
                    <field string="Variants" name="product_variant_count" widget="statinfo"/>
                </button>
            </div>
            <!--            </xpath>-->

            <!--        Inherited fields for removing attributes-->
            <!--            <xpath expr="//label[@for='standard_price']" position="replace">-->
            <!--                <label for="standard_price" groups="base.group_user"/>-->
            <!--            </xpath>-->

            <!--            <xpath expr="//div[@name='standard_price_uom']" position="replace">-->
            <!--                <div name="standard_price_uom" groups="base.group_user" class="o_row">-->
            <!--                    <field name="standard_price" class="oe_inline" widget='monetary' options="{'currency_field': 'cost_currency_id', 'field_digits': True}"/>-->
            <!--                    <span groups="uom.group_uom" >per-->
            <!--                        <field name="uom_name" class="oe_inline"/>-->
            <!--                    </span>-->
            <!--                </div>-->

            <!--            </xpath>-->


            <xpath expr="//notebook/page[@name='general_information']" position="after">
                <page string="Extra Information">
                    <group string="Other Details">
                        <group>
                            <field name="occasion"/>
                            <field name="material"/>
                            <field name="style_code"/>
                            <field name="func_spo"/>
                            <field name="gender"/>
                            <field name="tech_feat"/>
                            <field name="brand_id"/>
                            <field name="parent_buin"/>
                        </group>
                        <group>
                            <field name="user_defined_miscallaneous1"/>
                            <field name="user_defined_miscallaneous2"/>
                            <field name="user_defined_miscallaneous3"/>
                            <field name="user_defined_miscallaneous4"/>
                            <field name="user_defined_miscallaneous5"/>
                        </group>

                    </group>
                    <group string="Technical Specifications">
                        <field name="manufactured_by"/>
                        <field name="marketed_by"/>
                        <field name="length"/>
                        <field name="width"/>
                        <field name="height"/>
                        <field name="weight"/>
                        <field name="cntry_of_origin"/>
                        <field name="manufactured_by"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!--    Product Variant Form-->
    <record id="view_icore_variant_form" model="ir.ui.view">
        <field name="name">view.icore.variant</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook/page[@name='general_information']" position="after">
                <page string="Product Information">
                    <group string="Details">
                        <group>
                            <field name="brand_id_rel"/>
                            <field name="variants_asin"/>
                            <field name="variants_func_spo"/>
                            <field name="variants_gender"/>
                            <field name="variants_tech_feat"/>
                            <field name="variants_fsn"/>
                            <field name="variant_article_code"/>
                            <field name="buin"/>
                        </group>
                        <group>
                            <field name="variant_total_cost"/>
                            <!--                            <field name="variant_cost"/>-->
                            <field name="variant_packaging_cost"/>
                            <field name="color"/>
                            <field name="size"/>
                        </group>

                    </group>

                </page>
            </xpath>
        </field>
    </record>


    <!--    Product Variant Tree-->

    <record id="view_icore_variant_tree" model="ir.ui.view">
        <field name="name">view.icore.variant.tree</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="brand_id_rel" optional="hide"/>
                <field name="variant_article_code"/>
                <!--                <field name="barcode"/>-->
                <field name="variants_asin"/>
                <field name="variants_fsn"/>
            </xpath>
        </field>
    </record>

    <!--    button for import product-->
    <record model="ir.ui.view" id="view_import_attributes_form">
        <field name="name">Import Attributes</field>
        <field name="model">import.attributes</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="upload_attributes_file"/>
                    </group>
                    <group>
                    </group>
                </group>
                <footer>
                    <button name="import_product" string="Submit" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_import_attributes_form">
        <field name="name">Import Attributes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">import.attributes</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!--    Menuitem for Import script-->
    <menuitem id="menu_attributes_branch" name="Import Attributes"
              action="action_import_attributes_form" parent="stock.menu_stock_inventory_control" sequence="50"/>

    <!--  button for update product-->
    <record model="ir.ui.view" id="view_update_attributes_form">
        <field name="name">Update Attributes</field>
        <field name="model">update.attributes</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="upload_attributes_file"/>
                    </group>
                    <group>
                    </group>
                </group>
                <footer>
                    <button name="update_variants" string="Submit" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_update_attributes_form">
        <field name="name">Update Attributes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">update.attributes</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!--    Menuitem for update script-->
    <menuitem id="menu_update_attributes_branch" name="Update Attributes"
              action="action_update_attributes_form" parent="stock.menu_stock_inventory_control" sequence="60"/>

    <!--    Product Brand View-->

    <!--    #form view-->
    <record model="ir.ui.view" id="view_brand_form">
        <field name="name">Product Brand</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <form string="Brand">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--    tree view-->
    <record model="ir.ui.view" id="view_brand_tree">
        <field name="name">Product Brand List</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <tree string="Brand" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_brand_form">
        <field name="name">Product Brands</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.brand</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" eval="False"/>
    </record>

    <menuitem id="menu_brand" name="Brands"
              action="action_brand_form" parent="stock.menu_stock_inventory_control" sequence="30"/>

    <!--    Account move line inherit-->

    <record id="inherit_account_move_line" model="ir.ui.view">
        <field name="name">inherit.account.move.form</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="tax_amount_line" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!--    #inheriting SALE ORDER-->
    <record id="inherit_sale_order_form" model="ir.ui.view">
        <field name="name">inherit.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="warehouse_id" readonly="0" options="{'no_open': True, 'no_edit': True, 'no_create': True}"/>
                <field name="location_id" attrs="{'readonly': [('state', 'not in', 'draft')]}" options="{'no_open': True, 'no_edit': True, 'no_create': True}"/>
                <field name="gstin_id" domain="[('is_gstin', '=', 'True')]" options="{'no_open': True, 'no_edit': True, 'no_create': True}" attrs="{'readonly': [('state', '=', 'sale')]}"/>
                <field name="l10n_in_journal_id" domain="[('company_id', '=', company_id), ('type','=','sale')]" options="{'no_create': True}" attrs="{'invisible': [('country_code','!=', 'IN')]}"/>
                <field name="client_order_ref" string="PO No"/>
                <field name="event"/>
                <field name="no_of_cartons"/>
                <field name="is_fo" invisible="1"/>
            </xpath>

            <!--           <xpath expr="//group[@name='sale_info']//field[@name='l10n_in_journal_id']" position="attributes">-->
            <!--               <attribute name="invisible">1</attribute>-->
            <!--            </xpath>-->

            <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="before">
                <field name="stock_quantity" readonly="1" force_save="1"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                <field name="hsn_c" optional="hide"/>

            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="before">
                <field name="article_code" optional="hide"/>
                <field name="size" optional="hide"/>
            </xpath>
            <xpath expr="//header" position="inside">
                <!--                <button name="fo_action_confirm" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('is_fo', '!=', True), ('state', '=', 'done')]}"/>-->
                <button name="action_open_fo_wiz" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('is_fo', '!=', True), ('state', '=', 'done')]}"/>
            </xpath>
            <xpath expr="//button[@id='action_confirm']" position="attributes">
                <attribute name="attrs">{'invisible':['|', ('state', 'not in', ['sent']), ('is_fo', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                <attribute name="attrs">{'invisible':['|', ('state', 'not in', ['draft']), ('is_fo', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_fo_so" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('fo_so_count', '=', 0)]}">
                    <field name="fo_so_count" widget="statinfo" string="SO"/>
                </button>
            </xpath>

        </field>
    </record>

    <!--    Inheriting account move-->

    <record id="inherit_account_move" model="ir.ui.view">
        <field name="name">inherit.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='gstin_id']" position="attributes">
                <attribute name="attrs">{"invisible": [["move_type","=","entry"]]}</attribute>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='fiscal_position_id']" position="attributes">
                <attribute name="attrs">{"invisible": [["move_type","=","entry"]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='dispatch_partner_id']" position="attributes">
                <attribute name="attrs">{"invisible": [["move_type","=","entry"]]}</attribute>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="cust_code" attrs="{'invisible':[('move_type', '!=', 'out_invoice'),('move_type', '!=', 'in_invoice')]}"/>
                <field name="ref" string="PO No"/>
                <field name="event" attrs="{'invisible':[('move_type', '!=', 'out_invoice'),('move_type', '!=', 'in_invoice')]}"/>
                <field name="type_s" string='Type' attrs="{'invisible':[('move_type', '!=', 'out_invoice'),('move_type', '!=', 'in_invoice')]}"/>
            </xpath>
            <xpath expr="//page[@id='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='account_id']" position="after">
                <field name="myntra_sku_code" optional="hide"/>
                <field name="remarks" optional="hide"/>
            </xpath>

            <xpath expr="//page[@id='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="after">
                <field name="article_code" optional="hide"/>
                <field name="ean_code" optional="hide"/>
                <field name="size" optional="hide"/>
            </xpath>

            <!--            For adding partner address-->
            <xpath expr="//form/sheet/group/group[2]/div[1]"
                   position="after">
                <field name="partner_id" widget="res_partner_many2one" nolabel="1"
                       context="{
                                        'res_partner_search_mode': (context.get('default_move_type', 'entry') in ('out_invoice', 'out_refund', 'out_receipt') and 'customer') or (context.get('default_move_type', 'entry') in ('in_invoice', 'in_refund', 'in_receipt') and 'supplier') or False,
                                        'show_address': 1, 'default_is_company': True, 'show_vat': True}"
                       domain="[('type', '!=', 'private'), ('company_id', 'in', (False, company_id))]"
                       options="{'no_create': True, 'no_edit': True, 'no_open': True}"
                       attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='partner_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="options">{"no_create":true}</attribute>
            </xpath>

            <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='fiscal_position_id']" position="attributes">
                <attribute name="options">{"no_create":true}</attribute>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='invoice_tab']/field[@name='invoice_line_ids']/tree[1]/field[@name='product_id']" position="attributes">
                <attribute name="options">{"no_create":true}</attribute>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='invoice_tab']/field[@name='invoice_line_ids']/tree[1]/field[@name='product_uom_id']" position="attributes">
                <attribute name="options">{"no_create":true}</attribute>
            </xpath>

        </field>
    </record>

    <!--    Inheriting purchase Order-->
    <record id="inherit_purchase_order" model="ir.ui.view">
        <field name="name">inherit.purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="warehouse_id" options="{'no_open': True, 'no_edit': True, 'no_create': True}"/>
            </xpath>
            <xpath expr="//sheet//notebook/page[@name='products']/field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="remark" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                <field name="hsn_c" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                <field name="article_code" optional="hide"/>
            </xpath>

        </field>
    </record>

    <!--        Inherited for deductee type field-->
    <record id="inherit_res_partner" model="ir.ui.view">
        <field name="name">inherit.purchase.order.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="po_accounting_v16.partner_form_inherited"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='deductee_type_id']" position="replace">
                <field name="deductee_type_id" required="0" invisible="1"/>
            </xpath>
        </field>
    </record>

<!--    Upload Packing list-->
    <record id="view_bag_entry_manual_wizard_form" model="ir.ui.view">
        <field name="name">packing.list.manual.wizard.form</field>
        <field name="model">packing.list.manual</field>
        <field name="arch" type="xml">
            <form>
                <field name="alert_notification"/>
                <group>
                    <group>
                        <field name="file_name" invisible="1"/>
                        <field name="upload_file" options="{'accepted_file_extensions':'.csv'}" filename="file_name"/>
                    </group>
                    <group>
                    </group>
                </group>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="btn btn-outline-success"/>
                    <button string="Cancel" class="btn btn-outline-danger" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


</odoo>