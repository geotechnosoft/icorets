<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="paperformat_batch_deposit" model="report.paperformat">
        <field name="name">Amazon</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">15</field>
        <field name="dpi">90</field>
    </record>

    <record id="tax_invoice_report" model="ir.actions.report">
        <field name="name">Amazon</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">icorets.tax_invoice_forms</field>
        <field name="report_file">icorets.tax_invoice_forms</field>
        <field name="print_report_name">'Amazon'</field>
        <field name="paperformat_id" ref="icorets.paperformat_batch_deposit"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
    </record>

    <template id="tax_invoice_forms">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <style>
                        table {
                        font-size: 12px;
                        }
                    </style>
                    <div class="page">
                        <table style="width:100%;margin-top: 10px">
                            <tr style="border:1px solid black;">
                                <th class="text-center" colspan="3"><strong>Tax Invoice (Original for Receipient)</strong></th>
                            </tr>
                            <tr style="background-color:#87CEEB;border:1px solid black">
                                <th style="border:1px solid black;width:40%" class="text-center"><strong>Invoice Details</strong></th>
                                <th style="border:1px solid black;" class="text-center"><strong>Bill From</strong></th>
                                <th style="border:1px solid black;" class="text-center"><strong>Ship From</strong></th>
                            </tr>
                            <tr style="border:1px solid black;">
                                <td style="border:1px solid black;"><strong>Invoice No.:</strong>
                                    <t t-esc="o.name"/>
                                </td>
                                <td style="border:1px solid black;" rowspan="4">
                                    <p>
                                        <t t-esc="o.company_id.street"/>
                                        <br/>
                                        <t t-esc="o.company_id.street2"/>
                                        <br/>
                                        <t t-esc="o.company_id.city"/>
                                        <br/>
                                        <t t-esc="o.company_id.state_id.name"/>
                                        <br/>
                                        <t t-esc="o.company_id.zip"/>
                                        <br/>
                                        <t t-esc="o.company_id.country_id.name"/>
                                    </p>
                                </td>
                                <td style="border:1px solid black;" rowspan="4">
                                </td>
                            </tr>
                            <tr style="border:1px solid black;">
                                <td style="border:1px solid black;"><strong>Invoice Date:</strong>
                                    <t t-esc="o.invoice_date"/>
                                </td>
                            </tr>
                            <tr style="border:1px solid black;">
                                <td style="border:1px solid black;"><strong>PO#</strong></td>
                            </tr>
                            <tr style="border:1px solid black;">
                                <td style="border:1px solid black;"><strong>Ack. No:</strong></td>
                            </tr>
                            <tr style="border:1px solid black;">
                                <td style="border:1px solid black;"><strong>IRN:</strong></td>
                                <td style="border:1px solid black;"><strong>GSTIN Number:</strong>
                                    <t t-esc="o.company_id.vat"/>
                                </td>
                                <td style="border:1px solid black;"><strong>GSTIN Number:</strong>
                                    <t t-esc="o.partner_id.vat"/>
                                </td>
                            </tr>
                            <tr style="border:1px solid black;">
                                <td style="border:1px solid black;" rowspan="8"></td>
                                <td style="border:1px solid black;"><strong>PAN Number:</strong></td>
                                <td style="border:1px solid black;"><strong>PAN Number:</strong></td>
                            </tr>
                            <tr style="border:1px solid black;">
                                <th style="background-color:#87CEEB;border:1px solid black" class="text-center"><strong>Bill To</strong></th>
                                <th style="background-color:#87CEEB;border:1px solid black" class="text-center"><strong>Ship To</strong></th>
                            </tr>
                            <tr style="border:1px solid black;">
                                <td style="height:70px;border:1px solid black" rowspan="4">
                                    <p>
                                        <t t-esc="o.partner_id.street"/>
                                        <br/>
                                        <t t-esc="o.partner_id.street2"/>
                                        <br/>
                                        <t t-esc="o.partner_id.city"/>
                                        <br/>
                                        <t t-esc="o.partner_id.state_id.name"/>
                                        <br/>
                                        <t t-esc="o.partner_id.zip"/>
                                        <br/>
                                        <t t-esc="o.partner_id.country_id.name"/>
                                    </p>
                                </td>
                                <td style="height:70px;border:1px solid black" rowspan="4">
                                    <p>
                                        <t t-esc="o.partner_id.street"/>
                                        <br/>
                                        <t t-esc="o.partner_id.street2"/>
                                        <br/>
                                        <t t-esc="o.partner_id.city"/>
                                        <br/>
                                        <t t-esc="o.partner_id.state_id.name"/>
                                        <br/>
                                        <t t-esc="o.partner_id.zip"/>
                                        <br/>
                                        <t t-esc="o.partner_id.country_id.name"/>
                                    </p>
                                </td>
                            </tr>
                            <tr>

                            </tr>
                            <tr>

                            </tr>
                            <tr>

                            </tr>
                            <tr style="border:1px solid black;">
                                <td style="border:1px solid black;"><strong>GSTIN Number:</strong>
                                    <t t-esc="o.partner_id.vat"/></td>
                                <td style="border:1px solid black;"><strong>GSTIN Number:</strong>
                                    <t t-esc="o.partner_id.vat"/></td>
                            </tr>
                            <tr style="border:1px solid black;">
                                <td style="border:1px solid black;"><strong>PAN Number:</strong></td>
                                <td style="border:1px solid black;"></td>
                            </tr>
                            <tr style="border:1px solid black;">
                                <td colspan="3" style="border:1px solid black;"><strong>Reverse Charge (Y/N):</strong></td>
                            </tr>
                            <tr style="border:1px solid black;">
                                <td style="text-align:right" colspan="3"><strong>PAYMENT TERMS:30 Days</strong></td>
                            </tr>
                        </table>
                        <br/>
                        <table>
                            <tr style="background-color:#87CEEB">
                                <td class="text-center" width="2%">
                                    <strong>Sr.</strong>
                                </td>
                                <td class="text-center" width="10%">
                                    <strong>ASIN</strong>
                                </td>
                                <td class="text-center" width="12%">
                                    <strong>Article Code</strong>
                                </td>
                                <td class="text-center" width="10%">
                                    <strong>EAN</strong>
                                </td>
                                <td class="text-center" width="12%">
                                    <strong>Description</strong>
                                </td>
                                <td class="text-center" width="7%">
                                    <strong>Qty</strong>
                                </td>
                                <td class="text-center" width="12%">
                                    <strong>Price/Qty</strong>
                                </td>
                                <td class="text-center" width="12%">
                                    <strong>Total Price Excl</strong>
                                </td>
                                <td class="text-center" width="10%">
                                    <strong>Tax Rate</strong>
                                </td>
                                <td class="text-center" width="10%">
                                    <strong>Tax Amount</strong>
                                </td>
                            </tr>
                            <t t-set="sr_no" t-value="1"/>
                            <t t-foreach="o.invoice_line_ids" t-as="line">
                                <tr style="height:20px;text-align:center">
                                    <td>
                                        <t t-esc="sr_no"/>
                                        <t t-set="sr_no" t-value="sr_no+1"/>
                                    </td>
                                    <td>
                                        <t t-esc="line.product_id.variant_asin"/>
                                    </td>
                                    <td>
                                        <t t-esc="line.product_id.variant_article_code"/>
                                    </td>
                                    <td>
                                        <t t-esc="line.product_id.barcode"/>
                                    </td>
                                    <td>
<!--                                        <t t-esc="line.product_id.brand_id.name"/><br/>-->
                                        <t t-esc="line.product_id.brand_id_rel"/><br/>
                                        <t t-esc="line.product_id.name"/><br/>
                                        <t t-foreach="line.product_id.product_template_attribute_value_ids" t-as="prd">
                                            <span t-field="prd.name" /><br/>
                                        </t>
                                        <t t-esc="line.product_id.l10n_in_hsn_code"/><br/>
                                    </td>
                                    <td>
                                        <t t-esc="line.quantity"/>
                                    </td>
                                    <td>
                                        <t t-esc="line.price_unit"/>
                                    </td>
                                    <td>
                                        <t t-esc="line.price_subtotal"/>
                                    </td>
                                    <td>
                                        <t t-esc="line.tax_ids.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="round(line.tax_amount_line)"/>
                                    </td>
                                </tr>
                            </t>
                            <br/>
                            <tr>
                                <td style="text-align:right" colspan="8"><strong>Untaxed Amount</strong></td>
                                <td style="text-align:right" colspan="2">₹
                                    <t t-esc="o.amount_untaxed"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align:right" colspan="8">SGST</td>
                                <td style="text-align:right" colspan="2">₹
                                    <t t-esc="o.amount_tax / 2"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align:right" colspan="8">CGST</td>
                                <td style="text-align:right" colspan="2">₹
                                    <t t-esc="o.amount_tax / 2"/></td>
                            </tr>
                            <hr/>
                            <tr>
                                <td style="text-align:right" colspan="8"><strong>Total</strong></td>
                                <td style="text-align:right" colspan="2">₹
                                    <t t-esc="o.amount_total"/></td>
                            </tr>
                        </table>
                        <br/>
                        <table style="width:100%;margin-top: 10px">
                            <tr style="border:1px solid black;">
                                <th style="text-align:center;border:1px solid black;width=45%" colspan="3">UDYAM
                                    REGISTRATION NUMBER: UDYAM-MH-18-0026765
                                </th>
                                <td style="border:1px solid black;" colspan="12"></td>
                            </tr>
                            <tr style="border:1px solid black;">
                                <td style="text-align:center;border:1px solid black" colspan="3">Declaration and Terms
                                    conditions:
                                </td>
                                <th style="width:20%;border:1px solid black;text-align:center" colspan="3">No. of Cartons</th>
                                <th style="width:20%;border:1px solid black;text-align:center" colspan="3">Bank Details</th>
                                <td style="border:1px solid black;" width="15%" colspan="5" rowspan="2"></td>
