<odoo>
    <record id="paperformat_debit" model="report.paperformat">
        <field name="name">Debit Note</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">15</field>
        <field name="dpi">90</field>
    </record>

    <record id="debit_tax_invoice_report" model="ir.actions.report">
        <field name="name">Debit Note</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">icorets.debit_tax_invoice_forms</field>
        <field name="report_file">icorets.debit_tax_invoice_forms</field>
        <field name="print_report_name">(object.name or '').replace('/','_')</field>
        <field name="paperformat_id" ref="icorets.paperformat_debit"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
    </record>

    <template id="debit_tax_invoice_forms">
        <t t-call="web.html_container">
            <t t-foreach="docs.filtered(lambda x: x.move_type == 'in_refund')" t-as="doc">
                <t t-call="icorets.debit_report_original" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

