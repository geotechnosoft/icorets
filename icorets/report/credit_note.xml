<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="paperformat_batch_deposit" model="report.paperformat">
        <field name="name">Credit Note</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">30</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">25</field>
        <field name="dpi">90</field>
    </record>

    <record id="credit_tax_invoice_report" model="ir.actions.report">
        <field name="name">Credit Note</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">icorets.credit_tax_invoice_forms</field>
        <field name="report_file">icorets.credit_tax_invoice_forms</field>
        <field name="print_report_name">'Credit Note'</field>
        <field name="paperformat_id" ref="icorets.paperformat_batch_deposit"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
    </record>

