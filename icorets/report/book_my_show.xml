                                </td>
                                <td>
                                    <t t-esc="line.product_id.l10n_in_hsn_code"/>
                                </td>

                                <td>
                                    <t t-esc="line.quantity"/>&#160;<t t-esc="line.product_uom_id.name"/>
                                </td>
                                <td>
                                    <t t-esc="'%.2f'% line.price_unit"/>
                                </td>
                                <td>
                                    <t t-esc="'%.2f'% line.price_subtotal"/>
                                </td>
                                <td style="text-align: left">
                                    <!--                                        <t t-esc="line.tax_ids.name"/>-->
                                    <t t-if="line.tax_ids">
                                        <t t-foreach="line.tax_ids" t-as="t">
                                            <t t-if="t.children_tax_ids">
                                                <t t-set="counter" t-value="0"/>
                                                <t t-foreach="t.children_tax_ids" t-as="l">
                                                    <t t-if="counter &gt;= 1">
                                                        <span> + </span>
                                                    </t>
                                                    <span t-esc="l.name.split('-')[0]"/>
                                                    <t t-set="counter" t-value="counter+1"/>
                                                </t>
                                            </t>
                                            <t t-else="">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                            </t>

                                        </t>
                                    </t>
                                </td>
                                <td style="text-align: right">
                                    <t t-esc="line.tax_amount_line" t-options="{'widget': 'float', 'precision': 2}"/>
                                </td>
                                <td>
                                    <t t-esc="'%.2f'% line.price_total"/>

                                </td>
                            </tr>
                        </t>


                    </table>
                    <div class="clearfix mb-4">
                        <div id="total" class="row">
