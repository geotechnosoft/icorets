                            <td style="border:1px solid black;"><strong>Invoice No.:</strong>
                                <t t-esc="o.name"/>
                            </td>
                            <td style="border:1px solid black;width: 30%" rowspan="4">
                                <p>
                                    <t t-esc="o.company_id.name"/><br/>
                                    <t t-esc="o.company_id.street"/>,

                                    <t t-esc="o.company_id.street2"/>
                                    <br/>
                                    <t t-esc="o.company_id.city"/>,<t t-esc="o.company_id.zip"/>
                                    <t t-esc="o.company_id.state_id.name"/>,
                                    <t t-esc="o.company_id.country_id.name"/>
                                    <br/>
                                    <strong>GST Number</strong> <t t-esc="o.company_id.vat"/><br/>
                                    <strong>PAN Number</strong> <t t-esc="o.company_id.x_studio_pan"/>
                                </p>
                            </td>
                            <td style="border:1px solid black;" rowspan="4">
                                <p>
                                    <t t-esc="o.dispatch_partner_id.street"/>
                                    <br/>
                                    <t t-esc="o.dispatch_partner_id.street2"/>
                                    <br/>
                                    <t t-esc="o.dispatch_partner_id.city"/>,
                                    <t t-esc="o.dispatch_partner_id.zip"/>,
                                    <t t-esc="o.dispatch_partner_id.state_id.name"/>,
                                    <t t-esc="o.dispatch_partner_id.country_id.name"/>
                                    <br/>
                                </p>
                            </td>
                        </tr>
                        <tr style="border:1px solid black;">
                            <td style="border:1px solid black;"><strong>Invoice Date:</strong>
                                <t t-esc="o.invoice_date"/>
                            </td>
                        </tr>
                        <tr style="border:1px solid black;">
                            <td style="border:1px solid black;"><strong>PO#</strong>
                                <!--                                <t t-if="o.invoice_line_ids">-->
                                <!--                                    <t t-foreach="doc.invoice_line_ids[0]" t-as="acc">-->
                                <!--                                        <t t-if="acc.sale_line_ids.order_id.po_no">-->
                                <!--                                            <span t-esc="acc.sale_line_ids.order_id.mapped('po_no')[0]"/></t>-->
                                <!--                                    </t>-->
                                <!--                                </t>-->
                                <span t-esc="o.po_no"/>
                            </td>
                        </tr>
                        <tr style="border:1px solid black;">
                            <td style="border:1px solid black;"><strong>Reference Invoice : </strong> <span  t-esc="o.ref"/> <br/>
