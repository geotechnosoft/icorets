                        <thead>


                            <tr style="background-color:#87CEEB">
                                <th class="text-center" width="2%">
                                    <strong>Sr.</strong>
                                </th>

                                <th class="text-center">
                                    <strong>Article Code</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Size</strong>
                                </th>
                                <th class="text-center" width="10%">
                                    <strong>EAN</strong>
                                </th>
                                <th class="text-center" width="21%">
                                    <strong>Description</strong>
                                </th>
                                <th class="text-center">
                                    <strong>HSN</strong>
                                </th>
                                <th class="text-center" width="4%">
                                    <strong>Qty</strong>
                                </th>
                                <th class="text-center" width="7%">
                                    <strong>Price/Qty</strong>
                                </th>
                                <th class="text-center" width="8%">
                                    <strong>Total Price Excl Tax</strong>
                                </th>
                                <th class="text-center" width="12%">
                                    <strong>Tax Rate</strong>
                                </th>
                                <th class="text-center" width="%">
                                    <strong>Tax Amount</strong>
                                </th>
                                <th class="text-center" width="8%">
                                    <strong>Total Price Incl Tax</strong>
                                </th>
                            </tr>
                        </thead>
                        <t t-set="sr_no" t-value="1"/>
                        <t t-foreach="o.invoice_line_ids" t-as="line">
                            <tr style="height:20px;text-align:center">
                                <td>
                                    <t t-esc="sr_no"/>
                                    <t t-set="sr_no" t-value="sr_no+1"/>
                                </td>
                                <td>
                                    <t t-esc="line.product_id.variant_article_code"/>
                                </td>
                                <td>
                                    <t t-esc="line.fetch_size()"/>
                                </td>
                                <td>
                                    <t t-esc="line.product_id.barcode"/>
                                </td>
                                <td>
                                    <!--                                        <t t-esc="line.product_id.brand_id.name"/><br/>-->
                                    <t t-esc="line.product_id.brand_id_rel.name"/><br/>
                                    <t t-esc="line.product_id.name"/><br/>
