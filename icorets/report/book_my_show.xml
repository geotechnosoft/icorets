<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="paperformat_batch_deposit_invoice" model="report.paperformat">
        <field name="name">Tax Invoice</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">30</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">25</field>
        <field name="dpi">90</field>
    </record>

    <record id="taxes_invoice_report_bms" model="ir.actions.report">
        <field name="name">Book My Show</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">icorets.taxes_invoice_forms_bms</field>
        <field name="report_file">icorets.taxes_invoice_forms_bms</field>
        <field name="print_report_name">'Tax Invoice BMS'</field>
        <field name="paperformat_id" ref="icorets.paperformat_batch_deposit_invoice"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
    </record>

    <template id="taxes_invoice_forms_bms">
        <t t-call="web.html_container">
            <t t-foreach="docs.filtered(lambda x: x.move_type == 'out_invoice')" t-as="doc">
                <t t-call="icorets.tax_invoice_report_bms_original" t-lang="doc.partner_id.lang"/>
                <t t-call="icorets.tax_invoice_report_bms_sticker" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

    <template id="tax_invoice_report_bms_original">
        <t t-foreach="docs" t-as="o">
            <t t-call="icorets.report_invoice_layout">
                <style>
                    table {
                    font-size: 12px;
                    }
                </style>
                <div class="page">
                    <table style="width:100%;margin-top: 0px">
                        <tr style="border:1px solid black;">
                            <th class="text-center" colspan="3"><strong>Tax Invoice (Original for Receipient)</strong></th>
                        </tr>
                        <tr style="background-color:#87CEEB;border:1px solid black">
                            <th style="border:1px solid black;width:40%" class="text-center"><strong>Invoice Details</strong></th>
                            <th style="border:1px solid black;" class="text-center"><strong>Bill From</strong></th>
                            <th style="border:1px solid black;" class="text-center"><strong>Ship From</strong></th>
                        </tr>
