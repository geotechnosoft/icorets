                                                <strong>PAN Number</strong> <t t-esc="acc.sale_line_ids.order_id.mapped('partner_invoice_id.country_id.x_studio_pan')[0]"/>
                                                <br/>
                                            </p>
                                        </t>
                                        <t t-else="">
                                            <p>
                                                <t t-esc="o.partner_id.name"/><br/>
                                                <t t-esc="o.partner_id.street"/>,
                                                <t t-esc="o.partner_id.street2"/>
                                                <br/>
                                                <t t-esc="o.partner_id.city"/>,
                                                <t t-esc="o.partner_id.zip"/>,
                                                <t t-esc="o.partner_id.state_id.name"/>,
                                                <t t-esc="o.partner_id.country_id.name"/>
                                                <br/>
                                                <strong>GST Number</strong> <t t-esc="o.partner_id.vat"/><br/>
                                                <strong>PAN Number</strong> <t t-esc="o.partner_id.x_studio_pan"/>
