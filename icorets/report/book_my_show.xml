                                                <t t-esc="acc.sale_line_ids.order_id.mapped('partner_invoice_id.street')[0]"/>,
                                                <t t-esc="acc.sale_line_ids.order_id.mapped('partner_invoice_id.street2')[0]"/>
                                                <br/>
                                                <t t-esc="acc.sale_line_ids.order_id.mapped('partner_invoice_id.city')[0]"/>,
                                                <t t-esc="acc.sale_line_ids.order_id.mapped('partner_invoice_id.zip')[0]"/>,
                                                <t t-esc="acc.sale_line_ids.order_id.mapped('partner_invoice_id.state_id.name')[0]"/>,
                                                <t t-esc="acc.sale_line_ids.order_id.mapped('partner_invoice_id.country_id.name')[0]"/>
