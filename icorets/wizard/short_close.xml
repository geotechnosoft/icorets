<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_short_close_wizard" model="ir.ui.view">
        <field name="name">view.short.close.form</field>
        <field name="model">short.close</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="reason_id"/>
                    <field name="desc"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" class="oe_highlight" name="confirm_short_close"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>