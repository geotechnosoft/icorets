<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_forecast_order_wizard_form" model="ir.ui.view">
        <field name="name">forecast.order.wizard.form</field>
        <field name="model">forecast.order</field>
        <field name="arch" type="xml">
            <form>
                <field name="forecast_order_ids">
                    <tree editable="bottom" create="0" edit="1" delete="0">
                        <field name="product_id" required="1" readonly="1"/>
                        <field name="demand_qty" required="1" readonly="1"/>
                        <field name="top_priority_warehouse" readonly="1" optional="hide"/>
                        <field name="top_priority_qty_avail" readonly="1" optional="show"/>
                        <field name="top_priority_stock"/>
                        <field name="medium_priority_warehouse" readonly="1" optional="hide"/>
                        <field name="medium_priority_qty_avail" readonly="1" optional="show"/>
                        <field name="medium_priority_stock"/>
                        <field name="low_priority_warehouse" readonly="1" optional="hide"/>
                        <field name="low_priority_qty_avail" readonly="1" optional="show"/>
                        <field name="low_priority_stock"/>
                        <field name="total_received_qty"/>
                    </tree>
                </field>
                <footer>
                        <button name="action_fo_confirm" string="Confirm FO" type="object"
                                class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>