<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="stock_view_picking_form_change_warehouse" model="ir.ui.view">
        <field name="name">picking.warehouse</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_cancel']" position="after">
                <button name="change_warehouse"
                        attrs="{'invisible': [('state', 'not in', ('assigned', 'confirmed', 'draft', 'waiting'))]}"
                        string="Change Warehouse" type="object" data-hotkey="z"/>
            </xpath>
            <xpath expr="//sheet/group/group[1]/field[@name='location_id']" position="after">
                <field name="warehouse_id" options="{'no_create': True, 'no_open': True}"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="view_bulk_return_picking"
                        string="Return Picking"
                        type="object"
                        class="oe_stat_button">
                </button>
            </xpath>
        </field>
    </record>

    <record id="action_bulk_grn_return" model="ir.actions.server">
        <field name="name">Bulk GRN Return</field>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            if records:
            action = records.bulk_grn_return()
        </field>
    </record>

</odoo>