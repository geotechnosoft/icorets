<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="inherit_purchase_order_form_view" model="ir.ui.view">
        <field name="name">inherit_purchase_order_form_view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fiscal_position_id']" position="after">
                <field name="sale_order_id" readonly="1" string="Interbranch Sale Order"/>
            </xpath>
            <xpath expr="//div[@class='oe_button_box']" position="inside">
                        <button name="open_sale_order" type="object"
                                string="Sales Order" attrs="{'invisible': [('sale_order_id', '=', False)]}"
                                class="oe_stat_button" icon="fa-edit">
                        </button>
            </xpath>
        </field>
    </record>
</odoo>