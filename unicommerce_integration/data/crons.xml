<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <data noupdate="0">

        <!-- Generate Auth Token      -->
        <record id="generate_auth_token_unicommerce" model="ir.cron">
            <field name="name">Get Auth Token Unicommerce</field>
            <field name="model_id" ref="unicommerce_integration.model_shop_instance"/>
            <field name="state">code</field>
            <field name="code">model.generate_auth_token()</field>
            <field name='interval_number'>8</field>
            <field name='interval_type'>hours</field>
            <field name="numbercall">-1</field>
        </record>

        <!-- Get Orders      -->
        <record id="get_orders_unicommerce" model="ir.cron">
            <field name="name">Get Sales Orders Cron Unicommerce</field>
            <field name="model_id" ref="unicommerce_integration.model_shop_instance"/>
            <field name="state">code</field>
            <field name="code">model.get_unicomm_orders()</field>
            <field name='interval_number'>30</field>
            <field name='interval_type'>minutes</field>
            <field name="numbercall">-1</field>
        </record>

        <!-- Create Sales      -->
        <record id="create_sales_unicommerce" model="ir.cron">
            <field name="name">Create Sales Cron Unicommerce</field>
            <field name="model_id" ref="unicommerce_integration.model_shop_instance"/>
            <field name="state">code</field>
            <field name="code">model.create_unicomm_sales()</field>
            <field name='interval_number'>1</field>
            <field name='interval_type'>hours</field>
            <field name="numbercall">-1</field>
        </record>

        <!-- Create Returns      -->
        <record id="create_returns_sales_unicommerce" model="ir.cron">
            <field name="name">Create Returns Cron Unicommerce</field>
            <field name="model_id" ref="unicommerce_integration.model_shop_instance"/>
            <field name="state">code</field>
            <field name="code">model.create_unicomm_returns()</field>
            <field name='interval_number'>2</field>
            <field name='interval_type'>hours</field>
            <field name="numbercall">-1</field>
        </record>

    </data>

</odoo>