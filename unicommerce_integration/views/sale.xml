<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="unicommerce_sale_order_form" model="ir.ui.view">
        <field name="name">unicommerce.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="unicommerce_order_id" readonly="1"/>
            </xpath>
            <xpath expr="//page[@name='other_information']/group" position="after">
                <group string="Unicommerce Details">
                    <field name="shop_instance_id" readonly="1"/>
                    <field name="sales_channel_id" readonly="1"/>
                    <field name="dump_sequence" string="Code" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>