<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_stock_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="shop_instance_id" attrs="{'required': [('picking_type_code','=','incoming')]}"/>
                <field name="is_synced" invisible="1"/>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="sync_inventory" string="Sync Inventory" type="object" class="btn btn-warning"
                        attrs="{'invisible': ['|', ('state','!=','done'), ('is_synced','=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>