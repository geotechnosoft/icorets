<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Account Move Inherited View   -->
    <record id="unicommerce_account_move_form" model="ir.ui.view">
        <field name="name">unicommerce.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="unicommerce_order_id" readonly="1"/>
            </xpath>
            <xpath expr="//page[@name='other_info']/group" position="after">
                <group string="Unicommerce Details">
                    <field name="shop_instance_id" readonly="1"/>
                    <field name="sales_channel_id" readonly="1"/>
                    <field name="dump_sequence" string="Code" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>